<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomProgressBar">
        <attr name="progress_percentage" format="float"/>
        <attr name="radius" format="float"/>
        <attr name="customProgressBarTextSize" format="float"/>
        <attr name="base_color" format="integer"/>
        <attr name="progress_color" format="integer"/>
        <attr name="text" format="string"/>
        <attr name="rippleEnabled" format="boolean" />
        <attr name="backgroundColor" format="color" />
        <attr name="background_second_color" format="color"/>
        <attr name="enable_press" format="boolean"/>
        <attr name="enable_gradient" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CustomChart">
        <attr name="title" format="string"/>
        <attr name="unlocked" format="boolean"/>
        <attr name="chart_type" format="enum">
            <enum name="barChart" value="0"/>
            <enum name="horizontalBarChart" value="1"/>
            <enum name="pieChart" value="2"/>
            <enum name="spiderChart" value="3"/>
            <enum name="lineChart" value="4"/>
        </attr>
        <attr name="android:entries"/>
    </declare-styleable>

</resources>